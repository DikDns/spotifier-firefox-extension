{
  "manifest_version": 3,
  "name": "SPOTifier Extension",
  "version": "1.0",
  "description": "Sistem Pembelajaran Online Terpadu, but better :)",
  "permissions": [
    "cookies",
    "activeTab",
    "scripting",
    "storage",
    "*://localhost:*/*",
    "*://*.upi.edu/*",
    "*://spot.upi.edu/*",
    "*://spotifier-upi.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.spot.upi.edu/*",
        "*://*.spotifier-upi.vercel.app/*",
        "*://localhost:*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
